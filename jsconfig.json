{
    "compilerOptions": {
        "baseUrl": ".", // 기본 경로 설정
        "paths": {
            "@/*": ["src/*"] // @로 시작하는 경로를 src 디렉토리로 매핑
        }
    },
    "include": [
        "src/**/*.js", // JavaScript 파일 포함
        "src/**/*.vue" // Vue 파일도 포함
    ],
    "exclude": [
        "node_modules", // node_modules 디렉토리는 제외
        "dist" // 빌드 출력 디렉토리는 제외
    ]
}
